{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./typings/main.d.ts",
        "./*.ts",
        "./tests/*.ts",
        "./examples/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
